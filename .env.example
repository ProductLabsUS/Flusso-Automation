# Flusso Workflow Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# FRESHDESK
# ==========================================
FRESHDESK_DOMAIN=your-company.freshdesk.com
FRESHDESK_API_KEY=your_freshdesk_api_key_here

# ==========================================
# PINECONE
# ==========================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=us-east-1
PINECONE_IMAGE_INDEX=flusso-vision-index
PINECONE_TICKETS_INDEX=freshdesk-support-tickets

# ==========================================
# GEMINI
# ==========================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_FILE_SEARCH_STORE_ID=your_file_search_store_id_here

# ==========================================
# OPENAI (Optional - for embeddings)
# ==========================================
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# APPLICATION
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
